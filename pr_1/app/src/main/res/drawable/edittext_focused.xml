<!-- res/drawable/edittext_focused.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background Color when Focused -->
    <solid android:color="#F0F0F0"/> <!-- Change color as needed -->

    <!-- Border Color when Focused -->
    <stroke
        android:width="2dp"
        android:color="#007BFF"/> <!-- Change color and width as needed -->

    <!-- Corner Radius -->
    <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
</shape>
