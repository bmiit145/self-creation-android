<!-- res/drawable/edittext_default.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Default Background Color -->
    <solid android:color="#FFFFFF"/> <!-- Change color as needed -->

    <!-- Border Color when not Focused -->
    <stroke
        android:width="1dp"
        android:color="#CED4DA"/> <!-- Change color and width as needed -->

    <!-- Corner Radius -->
    <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
</shape>
